<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.cloudsmith.geppetto.ui.newWizardCategory"
            name="%_UI_Wizard_Category"/>
      <wizard
            category="org.cloudsmith.geppetto.ui.newWizardCategory"
            class="org.cloudsmith.geppetto.ui.GeppettoExecutableExtensionFactory:org.cloudsmith.geppetto.ui.wizard.NewPuppetProjectWizard"
            icon="icons/full/etool16/NewPuppetProject.gif"
            id="org.cloudsmith.geppetto.ui.NewPuppetProjectWizard"
            name="%_UI_PuppetProject_title"
            project="true">
         <description>
            %_UI_PuppetProject_description
         </description>
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
      <wizard
            id="org.cloudsmith.geppetto.ui.NewPuppetModuleProjectWizard"
            name="%_UI_PuppetModuleProject_title"
            class="org.cloudsmith.geppetto.ui.GeppettoExecutableExtensionFactory:org.cloudsmith.geppetto.ui.wizard.NewPuppetModuleProjectWizard"
            category="org.cloudsmith.geppetto.ui.newWizardCategory"
            project="true"
            icon="icons/full/etool16/NewPuppetProject.gif">
         <description>%_UI_PuppetModuleProject_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
      <wizard
            id="org.cloudsmith.geppetto.ui.NewPuppetProjectFromForgeWizard"
            name="%_UI_PuppetProjectFromForge_title"
            class="org.cloudsmith.geppetto.ui.GeppettoExecutableExtensionFactory:org.cloudsmith.geppetto.ui.wizard.NewPuppetProjectFromForgeWizard"
            category="org.cloudsmith.geppetto.ui.newWizardCategory"
            project="true"
            icon="icons/full/etool16/NewPuppetProject.gif">
         <description>%_UI_PuppetProjectFromForge_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
      <wizard
            category="org.cloudsmith.geppetto.ui.newWizardCategory"
            class="org.cloudsmith.geppetto.ui.wizard.NewManifestWizard"
            icon="icons/obj16/new_pp.png"
            id="org.cloudsmith.geppetto.ui.wizard.NewManifestWizard"
            name="New Puppet Manifest">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
         <description>
            %_UI_NewPuppetManifest_description
         </description>
      </wizard>
      <wizard
            category="org.cloudsmith.geppetto.ui.newWizardCategory"
            class="org.cloudsmith.geppetto.ui.wizard.NewModulefileWizard"
            icon="icons/obj16/puppet-16.png"
            id="org.cloudsmith.geppetto.ui.wizard.NewModulefileWizard"
            name="New Puppet Modulefile">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
         <description>
            %_UI_NewPuppetManifest_description
         </description>
      </wizard>
   </extension>
